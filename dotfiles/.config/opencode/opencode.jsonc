{
    "$schema": "https://opencode.ai/config.json",
    "share": "disabled",
    "autoupdate": false,
    "theme": "dracula",
    "permission": {
        "edit": "allow",
        "bash": {
            // git
            "git status": "allow",
            "git diff": "allow",
            "git log": "allow",

            // read files
            "ls": "allow",
            "cat": "allow",
            "bat": "allow",
            "grep": "allow",

            // gradle
            "./gradlew test": "allow",
            "./gradlew build": "allow",
            "./gradlew checkstyleMain": "allow",

            "*": "ask"
        }
    },
    "lsp": {
        "bash-language-server": {
            "command": [ "bash-language-server", "start" ],
            "extensions": [ ".sh", ".bash" ]
        },
        "nixd": {
            "command": [ "nixd" ],
            "extensions": [ ".nix" ]
        },
        "jdt.language.server": {
            "command": [ "jdtls" ],
            "extensions": [ ".java" ]
        }
    },
    "mcp": {
